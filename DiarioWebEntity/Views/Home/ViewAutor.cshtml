@{
    ViewBag.Title = "ViewAutor";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            @ViewBag.autor.NombreCompleto
        </div>

        <div class="card-body">

            <h3>Publicaciones de este autor</h3>

            @foreach (var publication in ViewBag.publicaciones) {
                <div class="card" style="margin: 20px 0 20px 0;">
                    <div class="card-header">
                        <h3>
                            @publication.Titulo | @publication.Fecha
                        </h3>
                    </div>
                    <div class="card-body">
                        
                        <img src="@publication.LinkImg" alt="Alternate Text" class="img-fluid" />
                    </div>
                    <div class="card-footer">
                        @publication.Resumen
                    </div>
                </div>

              
            }
        </div>
    </div>
</div>
